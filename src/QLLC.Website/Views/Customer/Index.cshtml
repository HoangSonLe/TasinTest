                var response = ajax("POST", "/Customer/CreateOrUpdateCustomer", dataItem, () => {
                    $(gridId).data("kendoGrid").dataSource.filter({});
                    myWindow.data("kendoWindow").close();
                });
            },
            close: function (e) {
                $(this.element).empty();
            },
        });
        if(!isCreate){

        }

