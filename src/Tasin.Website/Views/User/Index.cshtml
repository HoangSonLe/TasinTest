                    editor: "MultiSelect",
                    label: "Danh sách vai trò:",
                    editorOptions: {
                        optionLabel: "Chọn người vai trò",
                        dataTextField: "text",
                        dataValueField: "value",
                        filter: filterCustom,
                        dataSource: {
                            data:roleDatasource
                            // type: "json",
