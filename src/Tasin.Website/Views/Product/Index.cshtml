                                            pageNumber: data.page,
                                        }
                                    }
                                },
                            },
                            serverPaging: true,
                            serverFiltering: true,
                            page: 1,
                            pageSize: 9999,
                            schema: {
                                data: "data.data",
                                total: "data.total"
                            },
                        },
                    },
                },
                {
                    field: "lossRate",
                    title: "Hao hụt",
                    label: "Hao hụt:",
                    colSpan: 1,
                },
                {
                    field: "material_ID",
                    title: "Nguyên liệu",
                    label: "Nguyên liệu:",
                    colSpan: 1,
                    editor: "DropDownList",
                    editorOptions: {
                        optionLabel: "Chọn nguyên liệu",
                        dataTextField: "name",
                        dataValueField: "id",
                        filter: filterCustom,
